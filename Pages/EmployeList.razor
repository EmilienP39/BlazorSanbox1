@page "/employees"
<h3>EmployeList</h3>

<table class=table>
	<thead>
		<tr>
			<th>Prénom</th>
			<th>Nom</th>
			<th>Poste</th>
		</tr>
	</thead>
	<tbody>
        @foreach (Employee emp in Employees)
        {
		    <tr>
			    <td>@emp.Name</td>
			    <td>@emp.Lastname</td>
			    <td>@emp.Job.Title</td>
		    </tr>
        }
	</tbody>
</table>

@code {
	public List<Employee> Employees { get; set; } = 
    new List<Employee> 
{
            new Employee
            { 
                Name = "John", 
                Lastname = "Doe", 
                Job = new Job 
                { 
                    Id = 1, 
                    Title = "Manager" 
                } 
            },
            new Employee
            { 
                Name = "Jean", 
                Lastname = "Valjean", 
                Job = new Job 
                { 
                    Id = 2, 
                    Title = "Journaliste" 
                } 
            } 
        }; 
}
